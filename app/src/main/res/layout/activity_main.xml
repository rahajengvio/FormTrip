<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.sch.smktelkom_mlg.tugas01.xiirpl4027.formtrip.MainActivity"
    android:weightSum="1"
    android:orientation="vertical">

    <ImageView
        android:layout_width="348dp"
        android:layout_height="1dp"
        android:id="@+id/imageView"
        android:src="@drawable/coba11"
        android:layout_weight="0.38" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="Nama"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:id="@+id/textViewNama" />

        <EditText
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_gravity="center_horizontal"
            style="@style/Base.TextAppearance.AppCompat.Body2" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Trip"
            android:layout_weight="0.3"
            android:id="@+id/textView"
            style="@style/Base.TextAppearance.AppCompat.Body2" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:entries="@array/trip"
            style="@style/Base.TextAppearance.AppCompat.Body2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.09">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.13">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.02">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Paket"
                android:layout_weight="0.3"
                android:id="@+id/textView2"
                style="@style/Base.TextAppearance.AppCompat.Body2"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open Trip"
                android:id="@+id/radioButton"
                style="@style/Base.TextAppearance.AppCompat.Body2"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Private"
                android:id="@+id/radioButton2"
                style="@style/Base.TextAppearance.AppCompat.Body2"/>
        </RadioGroup>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.02">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ektra"
                android:id="@+id/textView3"
                style="@style/Base.TextAppearance.AppCompat.Body2"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alat Snorkeling"
                android:id="@+id/checkBox"
                style="@style/Base.TextAppearance.AppCompat.Body2"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photographer"
                android:id="@+id/checkBox2"
                style="@style/Base.TextAppearance.AppCompat.Body2"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kamera"
                android:id="@+id/checkBox3"
                style="@style/Base.TextAppearance.AppCompat.Body2"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kapal"
                android:id="@+id/checkBox4"
                style="@style/Base.TextAppearance.AppCompat.Body2"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jadwal Keberangkatan : "
            android:id="@+id/textView4"
            android:layout_weight="0.03"
            style="@style/Base.TextAppearance.AppCompat.Body2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tgl"
            android:id="@+id/textView5"
            android:layout_weight="0.04"
            style="@style/Base.TextAppearance.AppCompat.Body2"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:layout_weight="0.02"
            style="@style/Base.TextAppearance.AppCompat.Body2"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bln"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:id="@+id/textView6"
            android:layout_weight="0.04" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_weight="0.03" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ayo berangkat!"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:id="@+id/button" />

</LinearLayout>
